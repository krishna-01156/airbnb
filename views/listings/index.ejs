<% layout("/layouts/boilerplate") -%>
    <% let searchTerm=typeof location !=="undefined" ? location : "" ; %>

        <style>
            #filters {
                display: flex;
                flex-wrap: wrap;
                align-items: center;
            }

            .filter {
                margin-right: 2rem;
                text-align: center;
                margin-top: 1.4rem;
                opacity: 0.7;
            }

            .filter:hover {
                opacity: 1;
                cursor: pointer;
            }

            .filter p {
                font-size: 0.85rem;
            }

            .tax-info {
                display: none;
            }

            .tax-toggle {
                border: 1px solid black;
                border-radius: 1rem;
                height: 3rem;
                padding: 1rem;
                display: flex;
                margin-left: 4rem;
                align-items: center;
            }

            .wishlist-btn {
                position: absolute;
                top: 10px;
                right: 10px;
                background: none;
                border: none;
                font-size: 1.4rem;
                color: white;
                z-index: 10;
            }

            .wishlist-btn:hover {
                color: #fe424d;
                cursor: pointer;
            }
        </style>
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-water-ladder"></i></div>
                <p>Amazing Pool</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-regular fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-landmark-dome"></i></div>
                <p>Domes</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </div>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>
        <% if (listings.length===0) { %>
            <div class="container mt-4">
                <h4>No listings found for "<%= searchTerm %>"</h4>
            </div>
            <% } else { %>

                <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
                    <% for(let listing of listings){ %>
                        <div class="col">
                            <div class="card listing-card position-relative">
                                <a href="/listings/<%=listing._id%>">
                                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image"
                                        style="height: 20rem;">
                                </a>

                                <!-- Wishlist Button -->
                                <button type="button" class="wishlist-btn" data-bs-toggle="modal"
                                    data-bs-target="#wishlistModal" data-listing-id="<%= listing._id %>"
                                    data-listing-title="<%= listing.title %>">
                                    <i class="fa-heart <%= listing.isWishlisted ? 'fas active' : 'far' %>"></i>
                                </button>

                                <div class="card-body">
                                    <p class="card-text" style="color: black;">
                                        <b>
                                            <%= listing.title %>
                                        </b><br>
                                        â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
                                            <i class="tax-info"> &nbsp; +18%GST</i>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>

                <% } %>
                    <!-- Wishlist Modal -->
                    <div class="modal fade" id="wishlistModal" tabindex="-1" aria-labelledby="wishlistModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <form method="POST" id="wishlistForm">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="wishlistModalLabel">Add to Wishlist</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>

                                    <div class="modal-body">
                                        <p>Which wishlist do you want to add <b id="listingTitlePlaceholder"></b> to?
                                        </p>

                                        <!-- Existing Wishlist Selection -->
                                        <div id="existingWishlistSection" style="display: none;" class="mb-3">
                                            <label class="form-label">Choose Wishlist</label>
                                            <div id="wishlistOptions"></div>

                                            <div class="form-check mt-2">
                                                <input class="form-check-input" type="radio" name="selectedWishlistId"
                                                    value="new" id="create-new-radio">
                                                <label class="form-check-label" for="create-new-radio">Create New
                                                    Wishlist</label>
                                            </div>
                                        </div>

                                        <!-- New Wishlist Name Input -->
                                        <div id="newWishlistSection" class="mb-3">
                                            <label for="wishlistName" class="form-label">Wishlist Name</label>
                                            <input type="text" class="form-control" id="wishlistName" name="name"
                                                placeholder="Favorites" required>
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-danger">Add</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>



                    <script>
                        // Toggle tax info visibility
                        let taxswitch = document.getElementById("switchCheckDefault");
                        taxswitch?.addEventListener("click", () => {
                            let taxinfo = document.getElementsByClassName("tax-info");
                            for (let info of taxinfo) {
                                info.style.display = (info.style.display !== "inline") ? "inline" : "none";
                            }
                        });

                        // Set modal info and load wishlists dynamically
                        const wishlistModal = document.getElementById('wishlistModal');
                        wishlistModal.addEventListener('show.bs.modal', async function (event) {
                            const button = event.relatedTarget;
                            const listingId = button.getAttribute('data-listing-id');
                            const listingTitle = button.getAttribute('data-listing-title');

                            const form = document.getElementById('wishlistForm');
                            form.action = `/wishlist/add/${listingId}`;
                            document.getElementById('listingTitlePlaceholder').textContent = listingTitle;

                            const optionsDiv = document.getElementById('wishlistOptions');
                            optionsDiv.innerHTML = `<p>Loading...</p>`;

                            try {
                                const res = await fetch('/wishlist/check');
                                const data = await res.json();

                                if (data.wishlists.length === 0) {
                                    optionsDiv.innerHTML = `
                    <div class="mb-3">
                        <label for="wishlistName" class="form-label">Wishlist Name</label>
                        <input type="text" class="form-control" id="wishlistName" name="name" placeholder="Favorites" required>
                    </div>`;
                                } else {
                                    let html = '<div class="mb-3"><label class="form-label">Select Wishlist</label>';
                                    data.wishlists.forEach(w => {
                                        html += `
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="selectedWishlistId" value="${w._id}" id="wishlist-${w._id}">
                            <label class="form-check-label" for="wishlist-${w._id}">${w.name}</label>
                        </div>`;
                                    });

                                    html += `
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="radio" name="selectedWishlistId" value="new" id="create-new-radio">
                        <label class="form-check-label" for="create-new-radio">Create New Wishlist</label>
                    </div>
                    <div id="newWishlistInput" class="mt-2" style="display: none;">
                        <label for="wishlistName" class="form-label">New Wishlist Name</label>
                        <input type="text" class="form-control" id="wishlistName" name="name" placeholder="Favorites">
                    </div>
                </div>`;

                                    optionsDiv.innerHTML = html;

                                    // Add radio change listeners for dynamic content
                                    document.querySelectorAll('input[name="selectedWishlistId"]').forEach(r => {
                                        r.addEventListener('change', () => {
                                            const newInput = document.getElementById("newWishlistInput");
                                            const nameInput = document.getElementById("wishlistName");
                                            if (r.value === "new") {
                                                newInput.style.display = "block";
                                                nameInput.setAttribute("required", "required");
                                            } else {
                                                newInput.style.display = "none";
                                                nameInput.removeAttribute("required");
                                            }
                                        });
                                    });
                                }
                            } catch (err) {
                                console.error("Failed to fetch wishlists:", err);
                                optionsDiv.innerHTML = `<p>Error loading wishlists.</p>`;
                            }
                        });

                        // Submit wishlist form
                        document.getElementById('wishlistForm').addEventListener('submit', async function (e) {
                            e.preventDefault();

                            const form = e.target;
                            const listingId = form.action.split('/').pop();

                            const selectedRadio = document.querySelector('input[name="selectedWishlistId"]:checked');
                            const isNew = selectedRadio && selectedRadio.value === "new";
                            const wishlistName = document.getElementById('wishlistName')?.value;

                            let body = {};
                            if (isNew) {
                                if (!wishlistName || wishlistName.trim() === "") {
                                    alert("Please provide a name for the new wishlist.");
                                    return;
                                }
                                body = { name: wishlistName };
                            } else if (selectedRadio) {
                                body = { wishlistId: selectedRadio.value };
                            } else {
                                alert("Please select or create a wishlist.");
                                return;
                            }

                            try {
                                const res = await fetch(form.action, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        'Accept': 'application/json',
                                    },
                                    body: JSON.stringify(body)
                                });

                                if (res.ok) {
                                    // Update heart icon
                                    const heartIcon = document.querySelector(`.wishlist-btn[data-listing-id="${listingId}"] i`);
                                    if (heartIcon) {
                                        heartIcon.classList.remove('far');
                                        heartIcon.classList.add('fas', 'active');
                                    }

                                    // Close modal
                                    const modal = bootstrap.Modal.getInstance(document.getElementById('wishlistModal'));
                                    modal.hide();

                                    // Redirect or reload homepage
                                    window.location.href = "/listings";
                                } else {
                                    console.error("Failed to add to wishlist");
                                }
                            } catch (err) {
                                console.error("Request error:", err);
                            }
                        });
                    </script>