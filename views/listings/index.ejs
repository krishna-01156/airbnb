<% layout("/layouts/boilerplate") -%>
    <% let searchTerm=typeof location !=="undefined" ? location : "" ; %>

        <style>
            #filters {
                display: flex;
                flex-wrap: wrap;
                align-items: center;
            }

            .filter {
                margin-right: 2rem;
                text-align: center;
                margin-top: 1.4rem;
                opacity: 0.7;
            }

            .filter:hover {
                opacity: 1;
                cursor: pointer;
            }

            .filter p {
                font-size: 0.85rem;
            }

            .tax-info {
                display: none;
            }

            .tax-toggle {
                border: 1px solid black;
                border-radius: 1rem;
                height: 3rem;
                padding: 1rem;
                display: flex;
                margin-left: 4rem;
                align-items: center;
            }

            .wishlist-btn {
                position: absolute;
                top: 10px;
                right: 10px;
                background: none;
                border: none;
                font-size: 1.4rem;
                color: white;
                z-index: 10;
            }

            .wishlist-btn:hover {
                color: #fe424d;
                cursor: pointer;
            }
        </style>
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-water-ladder"></i></div>
                <p>Amazing Pool</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-regular fa-snowflake"></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-landmark-dome"></i></div>
                <p>Domes</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </div>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>
        <% if (listings.length===0) { %>
            <div class="container mt-4">
                <h4>No listings found for "<%= searchTerm %>"</h4>
            </div>
            <% } else { %>

                <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
                    <% for(let listing of listings){ %>
                        <a href="/listings/<%=listing._id%>" class="listing-link">
                            <div class="card col listing-card">
                                <div class="position-relative">
                                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image"
                                        style="height: 20rem;">

                                    <!-- Heart Icon -->
                                    <button type="button" class="wishlist-btn" data-bs-toggle="modal"
                                        data-bs-target="#wishlistModal" data-listing-id="<%= listing._id %>"
                                        data-listing-title="<%= listing.title %>">
                                        <i class="fa-heart <%= listing.isWishlisted ? 'fas active' : 'far' %>"></i>
                                    </button>


                                    <div class="card-body">
                                        <p class="card-text">
                                            <b>
                                                <%= listing.title %>
                                            </b><br>
                                            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                                                <i class="tax-info"> &nbsp; +18%GST</i>
                                        </p>
                                    </div>
                                </div>
                        </a>
                        <% } %>
                </div>
                <% } %>
                    <!-- Wishlist Modal -->
                    <div class="modal fade" id="wishlistModal" tabindex="-1" aria-labelledby="wishlistModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <form method="POST" id="wishlistForm">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="wishlistModalLabel">Add to Wishlist</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Which wishlist do you want to add <b id="listingTitlePlaceholder"></b> to?
                                        </p>
                                        <div class="mb-3">
                                            <label for="wishlistName" class="form-label">Wishlist Name</label>
                                            <input type="text" class="form-control" id="wishlistName" name="name"
                                                placeholder="Favorites" required>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-danger">Add</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>


                    <script>
                        let taxswitch = document.getElementById("switchCheckDefault");
                        taxswitch.addEventListener("click", () => {
                            let taxinfo = document.getElementsByClassName("tax-info");
                            for (info of taxinfo) {
                                if (info.style.display != "inline") {
                                    info.style.display = "inline";
                                } else {
                                    info.style.display = "none";
                                }
                            }
                        });
                        const wishlistModal = document.getElementById('wishlistModal');
                        wishlistModal.addEventListener('show.bs.modal', function (event) {
                            const button = event.relatedTarget;
                            const listingId = button.getAttribute('data-listing-id');
                            const listingTitle = button.getAttribute('data-listing-title');

                            const form = document.getElementById('wishlistForm');
                            form.action = `/wishlist/${listingId}`;

                            document.getElementById('listingTitlePlaceholder').textContent = listingTitle;
                        });
                        document.getElementById('wishlistForm').addEventListener('submit', async function (e) {
                            e.preventDefault();

                            const form = e.target;
                            const listingId = form.action.split('/').pop();
                            const wishlistName = document.getElementById('wishlistName').value;

                            try {
                                const res = await fetch(form.action, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        'Accept': 'application/json',
                                    },
                                    body: JSON.stringify({ name: wishlistName })
                                });

                                if (res.ok) {
                                    alert('Wishlist added successfully');
                                    const modal = bootstrap.Modal.getInstance(document.getElementById('wishlistModal'));
                                    modal.hide();

                                    const heartIcon = document.querySelector(`.wishlist-btn[data-listing-id="${listingId}"] i`);
                                    heartIcon.classList.remove('far');
                                    heartIcon.classList.add('fas', 'active');

                                
                                    document.getElementById('wishlistName').value = "";
                                } else {
                                    console.error("Failed to add to wishlist");
                                }
                            } catch (err) {
                                console.error("Request error:", err);
                            }
                        });
                    </script>